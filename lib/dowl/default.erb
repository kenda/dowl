<html>
  <head>
	<title><%= schema.ontology.title %></title>
    <link href="bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/codemirror/lib/codemirror.css">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>    
  </head>
  <body>
  
	<div class="container">
		<h1><%= schema.ontology.title %></h1>

		<dl>
		  <dt>Latest Version</dt>
		  <dd><a href="<%= schema.ontology.uri %>"><%= schema.ontology.uri %></a></dd>
		  <% if schema.ontology.created %>
		  	<dt>Created</dt>
		  	<dd><%= schema.ontology.created %></dd>
		  <% end %>
		  <% if schema.ontology.modified %>		  	
		  	<dt>Last Modified</dt>
		  	<dd><%= schema.ontology.modified %></dd>
		  <% end %>		  		  
		  <dt>Authors</dt>
		  <% schema.ontology.authors.each do |author| %><dd><a href="<%= author.uri %>"><%= author.name %></a></dd><%end%>
		</dl>
		
		<h1>Abstract</h1>
		
			<%= schema.ontology.comment %>
		
		<% if introduction %>
		<%= introduction %>
		<% end %>
		
		<div id="overview">
			<h2>Overview Of Terms</h2>		
			<p>An alphabetical index of the ontology terms, divided into classes, properties and individuals. All the terms are hyperlinked to their 
			detailed description for quick reference.
			</p>
			
			<p><strong>Classes</strong>:
			 <% schema.list_classes().each do |key,val| %>
			 | <a href="#class_<%= val.short_name %>"><%= val.short_name %></a>
			 <% end %>		
			</p>
			<p><strong>Properties</strong>:
			 <% schema.list_properties().each do |key,val| %>
			 | <a href="#prop_<%= val.short_name %>"><%= val.short_name %></a>
			 <% end %>
			</p>				
		</div>
		
		<div id="terms">
			<h2>Ontology Terms</h2>
		</div>
		
		<div id="classes">
			<h3>Classes</h3>
			
	   		<%schema.list_classes().each do |t| %>	   			
	   			<div class="term" id="class_<%= t[1].short_name %>">	   					   			
	   				<h4>Class: <%= t[1].short_name %></h4>
	   				<div class="row">
	   					<div class="span2">
	   					<h5>Overview</h5>
	   					</div>
	   					<div class="span10">
		   				<table class="table">
		   				<tr><td>Label</td><td><%= t[1].label %> </ts></tr>
		   				<tr><td>URI</td><td><code><%= t[1].uri %></code></ts></tr>
		   				<tr><td>Status</td><td><%= t[1].status %> </ts></tr>
		   				<% if t[1].sub_class_of.length > 0 %>
                                                <tr>
						  <td>Parent Classes</td>
						  <td>
		   				    <% for parent_class in t[1].sub_class_of %>
		   					<% if parent_class.class.to_s == "String" %>
							  <a href="<%= parent_class %>"><%= parent_class %></a>
		   					<% else %>
							  <a href="#class_<%= parent_class.short_name %>"><%= parent_class.short_name %></a>
		   					<% end %>
		   				    <% end %>
						    </td>
						  </tr>
						<% end %>
		   				<% if t[1].sub_classes.length > 0 %>
							<tr>
								<td>Sub-Classes</td>
								<td>
									<% t[1].sub_classes.each do |child| %>
										<a href="#class_<%= child.short_name %>"><%= child.short_name %></a>
									<% end %>
								</td>
							</tr>
		   				<% end %>	   				
		   				</table>	   		
		   				</div>		   				
					</div>		   	
					<div class="row">
						<div class="offset2 span10">
			   				<p><%= t[1].comment %> </p>
			   				<% if t[1].see_alsos.length > 0 %>
				   				<p><em>Further Reading:</em></p>
				   				<ul>	   			
			   						<% t[1].see_alsos.each do |link| %>
			   						<li><a href="<%= link %>"><%= link %></a></li>
			   						<% end %>
			   					</ul>
			   				<% end %>
						</div>			   				
	   				</div>
	   			</div>
	   			<div class="row">
	   				<div class="offset10">
	   					<a href="#overview">Back to Overview</a>
					</div>	   					
	   			</div>
	   			<hr>
	  		<%end%>		
		
		</div>
		
		<div id="properties">
			<h3>Object Properties</h3>
	
	   		<% schema.list_object_properties().each do |t| %>
	   			<div class="term" id="prop_<%= t[1].short_name %>">
	   				<h4>Property: <%= t[1].short_name %></h4>
	   				<div class="row">
	   					<div class="span2">
	   					<h5>Overview</h5>
	   					</div>
	   					<div class="span10">
			   				
			   				<table class="table">
			   					<tr><td>Label</td><td><%= t[1].label %> </ts></tr>
			   					<tr><td>URI</td><td><code><%= t[1].uri %></code></ts></tr>	   					
				   				<tr><td>Status</td><td><%= t[1].status %> </ts></tr>
                                                                <% if t[1].sub_property_of.length > 0 %>
                                                                <tr>
								  <td>Parent Properties</td>
								  <td>
				   				    <% for parent_prop in t[1].sub_property_of %>
				   				      <% if parent_prop.class.to_s == "String" %>	   				
				   						<a href="<%= parent_prop %>"><%= parent_prop %></a>
				   				      <% else %>
				   						<a href="#prop_<%= parent_prop.short_name %>"><%= parent_prop.short_name %></a>
				   				      <% end %>
				   				    <% end %>
								  </td>
								</tr>
								<% end %>
				   				<% if t[1].sub_properties.length > 0 %>
									<tr>
										<td>Sub-Properties</td>
										<td>
											<% t[1].sub_properties.each do |child| %>
												<a href="#prop_<%= child.short_name %>"><%= child.short_name %></a>
											<% end %>
										</td>
									</tr>
				   				<% end %>		   				
				   				<% if t[1].range.length > 0 %>
				   					<tr><td>Range</td>
				   					<td>
				   					<% t[1].range.each do |cls| %>
				   						<% if cls.class.to_s == "String" %>
				   						<a href="<%= cls %>"><%= cls %></a>
				   						<% else %>
				   						<a href="#class_<%= cls.short_name %>"><%= cls.short_name %></a>
				   						<% end %>
				   					<% end %>		   				
				   					</td>
				   					</tr>
				   				<% end %>
				   				<% if t[1].domain.length > 0 %>
				   					<tr><td>Domain</td>
				   					<td>
				   					<% t[1].domain.each do |cls| %>
				   						<% if cls.class.to_s == "String" %>
				   						<a href="<%= cls %>"><%= cls %></a>
				   						<% else %>
				   						<a href="#class_<%= cls.short_name %>"><%= cls.short_name %></a>
				   						<% end %>
				   					<% end %>		   				
				   					</td>
				   					</tr>
				   				<% end %>		   				
			   				</table>	   				
		   				</div>		   				
					</div>		   	
					<div class="row">
						<div class="offset2 span10">
		   				
			   				<p><%= t[1].comment %> </p>
			   				<% if t[1].see_alsos.length > 0 %>
				   				<p><em>Further Reading:</em></p>
				   				<ul>	   			
			   						<% t[1].see_alsos.each do |link| %>
			   						<li><a href="<%= link %>"><%= link %></a></li>
			   						<% end %>
			   					</ul>
			   				<% end %>
	   				</div>
	   			</div>
	   			<div class="row">
	   				<div class="offset10">
	   					<a href="#overview">Back to Overview</a>
					</div>	   					
	   			</div>
	   			<hr>
	  		<%end%>		
		
					
			<h3>Datatype Properties</h3>
	
	   		<%schema.list_datatype_properties().each do |t| %>
	   			<div class="term" id="prop_<%= t[1].short_name %>">
	   				<h4>Property: <%= t[1].short_name %></h4>
	   				<div class="row">
	   					<div class="span2">
	   					<h5>Overview</h5>
	   					</div>
	   					<div class="span10">
		   				
		   				<table class="table">
							<tr><td>Label</td><td><%= t[1].label %> </ts></tr>
		   					<tr><td>URI</td><td><code><%= t[1].uri %></code></ts></tr>							   				
			   				<tr><td>Status</td><td><%= t[1].status %> </ts></tr>
                                                        <% if t[1].sub_property_of.length > 0 %>
                                                        <tr>
							  <td>Parent Properties</td>
							  <td>
				   			    <% for parent_prop in t[1].sub_property_of %>
				   			      <% if parent_prop.class.to_s == "String" %>	   				
				   			        <a href="<%= parent_prop %>"><%= parent_prop %></a>
				   		              <% else %>
				   			        <a href="#prop_<%= parent_prop.short_name %>"><%= parent_prop.short_name %></a>
				   			      <% end %>
				   			    <% end %>
							  </td>
							</tr>
							<% end %>
			   				<% if t[1].sub_properties.length > 0 %>
								<tr>
									<td>Sub-Properties</td>
									<td>
										<% t[1].sub_properties.each do |child| %>
											<a href="#prop_<%= child.short_name %>"><%= child.short_name %></a>
										<% end %>
									</td>
								</tr>
			   				<% end %>		   				
			   				<% if t[1].range.length > 0 %>
			   					<tr><td>Range</td>
			   					<td>
			   					<% t[1].range.each do |cls| %>
			   						<% if cls.class.to_s == "String" %>
			   						<a href="<%= cls %>"><%= cls %></a>
			   						<% else %>
			   						<a href="#class_<%= cls.short_name %>"><%= cls.short_name %></a>
			   						<% end %>
			   					<% end %>		   				
			   					</td>
			   					</tr>
			   				<% end %>
			   				<% if t[1].domain.length > 0 %>
			   					<tr><td>Domain</td>
			   					<td>
			   					<% t[1].domain.each do |cls| %>
			   						<% if cls.class.to_s == "String" %>
			   						<a href="<%= cls %>"><%= cls %></a>
			   						<% else %>
			   						<a href="#class_<%= cls.short_name %>"><%= cls.short_name %></a>
			   						<% end %>
			   					<% end %>		   				
			   					</td>
			   					</tr>
			   				<% end %>				
		   				</table>	   				
		   				</div>		   				
					</div>		   	
					<div class="row">
						<div class="offset2 span10">
				   				
			   				
			   				<p><%= t[1].comment %> </p>
			   				<% if t[1].see_alsos.length > 0 %>
				   				<p><em>Further Reading:</em></p>
				   				<ul>	   			
			   						<% t[1].see_alsos.each do |link| %>
			   						<li><a href="<%= link %>"><%= link %></a></li>
			   						<% end %>
			   					</ul>
			   				<% end %>
	   					</div>
	   			</div>
	   			<div class="row">
	   				<div class="offset10">
	   					<a href="#overview">Back to Overview</a>
					</div>	   					
	   			</div>
	   			<hr>	   			
	  		<%end%>		
				
		</div>
	
	</div>

	<script src="jquery.js"></script> 		
	<script src="bootstrap.min.js"></script>
	
  </body>	
</html>
